import networkx as nx

# Создаем граф с 27 узлами
G = nx.Graph()

# Добавляем узлы
num_nodes = 27
G.add_nodes_from(range(num_nodes))

# Задаем значения для узлов в виде "ямы" и "горбика"
values = []
for i in range(num_nodes):
    if i < num_nodes // 2:
        # Падение (яма)
        value = (num_nodes // 2 - i) / (num_nodes // 2)
    else:
        # Рост (горбик)
        value = (i - num_nodes // 2) / (num_nodes // 2)

    values.append(value)

# Добавляем ребра (например, полное соединение для простоты)
for i in range(num_nodes):
    for j in range(i + 1, num_nodes):
        G.add_edge(i, j)

# Вычисляем центральность
degree_centrality = nx.degree_centrality(G)
closeness_centrality = nx.closeness_centrality(G)
betweenness_centrality = nx.betweenness_centrality(G)

# Выводим результаты
print("Степенная центральность:")
for node, centrality in degree_centrality.items():
    print(f"Узел {node}: {centrality:.4f}")

print("\nБлизость центральности:")
for node, centrality in closeness_centrality.items():
    print(f"Узел {node}: {centrality:.4f}")

print("\nПромежуточная центральность:")
for node, centrality in betweenness_centrality.items():
    print(f"Узел {node}: {centrality:.4f}")

